<div class="container-fluid">
  <h2>Friend Requests Sent</h2>
  <% @received_friendships.each do |received_friendship| %>
    <div align="left" class="row friendship-info">
      <div class="friendship-user">
        <b>Name:</b>
        <%= received_friendship.user.name %>
      </div>
     <%= link_to 'Accept Request',{:controller => "friendships",:friend_o => received_friendship.user.id, :action => "accept_request"} , :method=>:post, class: 'btn btn-success' %>
     <%= link_to 'Cancel Request',{:controller => "friendships",:friendship_id=> received_friendship.id, :action => "delete_request"} , :method=>:post, class: 'btn' %>
      <div class="friendship-status">
        <b>Status:</b>
        <%= received_friendship.status%>
      </div>
    </div>
  <% end %>
</div>
